package Projeto;

public class Alimento {
    String nome;
    double peso;
    Alimento(String nome, double peso){
        this.nome = nome;
        this.peso = peso;
    }
}

package Projeto;

public class Animal {
    String nome;
    double peso;
    Animal(String nome, double peso){
        this.nome = nome;
        this.peso = peso;
    }
}

package Projeto;

public class Fazenda {
    public static void main(String[] args){
        Alimento a = new Alimento("Maca", 5);
        Animal A = new Animal("Macaco", 3.7);

        System.out.println(a.nome);
        System.out.println(A.nome);
        System.out.println(A.peso + a.peso);
    }
}
